<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5sp"
    tools:context=".AddProductActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/AppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:theme="@style/ThemeOverlay.AppCompat"

        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:textAlignment="center"
            app:navigationIcon="@drawable/outline_arrow_back_24"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Chi tiết sản phẩm" />

    </com.google.android.material.appbar.AppBarLayout>


    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="wrap_content"
        android:layout_height="235dp"
        android:layout_below="@+id/AppBarLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gallery" />

    <LinearLayout
        android:id="@+id/ll_product_name"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_product"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="34sp"
            android:paddingBottom="5sp"
            android:text="Tên sản phẩm"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_product"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_shape"
            android:hint="San pham A"
            android:inputType="text"
            android:padding="12dp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_product_name"
        android:layout_marginHorizontal="20dp"
        android:stretchColumns="*">

        <!-- Hàng 1 -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5sp"
                android:text="Mã sản phẩm"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5sp"
                android:text="Giá"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:layout_marginLeft="15sp" />
        </TableRow>

        <!-- Hàng 2 -->
        <TableRow>

            <EditText
                android:id="@+id/ed_id_product"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:layout_weight="1"
                android:background="@drawable/btn_shape"
                android:hint="0"
                android:inputType="text"
                android:padding="12dp" />

            <EditText
                android:id="@+id/ed_price"

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_weight="1"
                android:background="@drawable/btn_shape"
                android:hint="0"
                android:inputType="number"
                android:padding="12dp" />

        </TableRow>


        <!-- Các hàng khác nếu cần -->
    </TableLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs_quantity"
        android:layout_width="381dp"
        android:layout_height="87dp"
        android:layout_below="@+id/tableLayout2"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="20dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="174dp"
            android:layout_height="35dp"
            android:layout_marginBottom="52dp"
            android:paddingBottom="5sp"
            android:text="Số lượng"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/ed_quantity_product"
            android:layout_width="177dp"
            android:layout_height="50dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/btn_shape"
            android:hint="0"
            android:inputType="text"
            android:lineSpacingExtra="34sp"
            android:padding="12dp"
            android:paddingBottom="5sp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btCreate"
            android:layout_width="147dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:text="Thêm mới"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.926" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>